<a href="{{post.url}}" class="post">
    <article>
        <header class="wrapper">
            <h2>
                {{title}}
            </h2>
        </header>
        {{#if @config.custom.frontFeaturedImage}}
            <br>
            {{#featuredImage}}
            {{#if url}}
                {{#if @config.custom.lazyLoad}}
                    <div class="feed__image">
                        <img
                        class="lazyload"
                        {{#checkIf @config.custom.lazyLoadEffect '!==' "fadein" }}
                            src="{{urlXs}}"
                        {{else}}
                            data-src="{{url}}"
                        {{/checkIf}}
                        data-srcset="{{srcset.post}}"
                        data-aspectratio="{{ math width '/' height }}"
                        data-sizes="auto"
                        height="{{height}}"
                        width="{{width}}"
                        alt="{{alt}}">
                    </div>
                {{else}}
                    <div class="feed__image">
                        <img
                        src="{{url}}"
                        sizes="{{sizes.post}}"
                        srcset="{{srcset.post}}"
                        alt="{{alt}}">
                    </div>
                {{/if}}
            {{/if}}
            {{/featuredImage}}
        {{/if}}
        <div class="feed__item__excerpt">
            {{#if hasCustomExcerpt}}
            {{{ excerpt }}}
            {{else}}
            <p>{{{ excerpt }}}</p>
            {{/if}}
        </div>
    </article>
</a>